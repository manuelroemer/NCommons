<Project>

  <!-- Default C# Project properties that are expected for all sub-projects. -->
  <PropertyGroup>
    <LangVersion>8.0</LangVersion>

    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);CS1591</NoWarn>

    <GenerateLibraryLayout>true</GenerateLibraryLayout>
  </PropertyGroup>
  
  <PropertyGroup>
    <NullableReferenceTypes>true</NullableReferenceTypes>
    <NullableContextOptions>enable</NullableContextOptions>
    <WarningsAsErrors>
      $(WarningsAsErrors);
      CS8600; <!-- Converting null literal or possible null value to non-nullable type. -->
      CS8602; <!-- Possible derefence of a null value reference. -->
      CS8603; <!-- Possible null reference return. -->
      CS8604; <!-- Possible null reference argument for parameter. -->
      CS8612; <!-- Nullability of reference types in type doesn't match implicitly implemented member. -->
      CS8615; <!-- Nullability of reference types in type doesn't match implemented member. -->

      CS8618; <!-- Non-nullable field is uninitialized. -->
      CS8620; <!-- Nullability of reference types in argument of type 'Class<T?>' doesn't match target type 'Other<T>'. -->
      CS8625; <!-- Cannot convert null literal to non-nullable reference or unconstrained type parameter. -->
    </WarningsAsErrors>
  </PropertyGroup>
  
  
  <!-- Global project metadata.-->
  <PropertyGroup>
    <Product>NCommons</Product>
    <NeutralLanguage>en</NeutralLanguage>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/manuelroemer/NCommons</RepositoryUrl>
  </PropertyGroup>
  
  
  <!-- Global CA rules. Should be replaced with a shared ruleset. -->
  <PropertyGroup>
    <NoWarn>
      $(NoWarn);
      CA2225; <!-- Operator overloads have named alternates. -->
      CA1710; <!-- IEnumerable implementers should end in Collection. -->
    </NoWarn>
  </PropertyGroup>
  
  <!-- Hand in hand with the CA: We don't want to have open warnings when releasing. -->
  <PropertyGroup Condition=" $(Configuration) == 'Release' ">
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
  </PropertyGroup>
  
</Project>